# ======================
# SOLANA RPC CONFIGURATION
# ======================
# Get your Helius API key from: https://www.helius.dev
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# Optional: Alchemy RPC (alternative to Helius)
# ALCHEMY_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# ======================
# WALLET CONFIGURATION
# ======================
# Your Solana wallet private key (base58 encoded)
# NEVER share this key! Keep it secure!
WALLET_PRIVATE_KEY=your_base58_encoded_private_key_here

# ======================
# TELEGRAM BOT
# ======================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Authorized user IDs (comma-separated) - Only these users can use the bot
# Get your Telegram user ID from @userinfobot
AUTHORIZED_USERS=123456789,987654321

# ======================
# AI CONFIGURATION
# ======================
# OpenRouter API key for AI analysis
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Or use OpenAI directly
# OPENAI_API_KEY=your_openai_api_key_here

# ======================
# TRADING PARAMETERS
# ======================
# Default buy amounts (in SOL)
DEFAULT_BUY_AMOUNT_1=0.1
DEFAULT_BUY_AMOUNT_2=0.5
DEFAULT_BUY_AMOUNT_3=1.0

# Slippage tolerance (percentage)
BUY_SLIPPAGE=10
SELL_SLIPPAGE=15

# Priority fee (in SOL) - Higher = faster execution
PRIORITY_FEE=0.0001

# ======================
# RISK MANAGEMENT
# ======================
# Take profit target (percentage)
TAKE_PROFIT_PERCENT=20

# Stop loss (percentage)
STOP_LOSS_PERCENT=-10

# Maximum hold time (milliseconds) - Auto-sell after this time
MAX_HOLD_TIME=300000

# Maximum position size (in SOL)
MAX_POSITION_SIZE=2.0

# Maximum daily loss (in SOL)
MAX_DAILY_LOSS=5.0

# ======================
# TOKEN VALIDATION
# ======================
# Minimum liquidity required (in USD)
MIN_LIQUIDITY=1000

# Minimum market cap (in USD)
MIN_MARKET_CAP=5000

# Maximum risk score (0-10) - Tokens above this won't be traded
MAX_RISK_SCORE=7
